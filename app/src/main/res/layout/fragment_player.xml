<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">

    <ListView
        android:id="@+id/track_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@color/yellow"
        android:dividerHeight="1dp"
        android:choiceMode="singleChoice"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/volume_bar"
        android:background="@color/yellow"/>

<!--    <TextView-->
<!--        android:id="@+id/current_track"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textAlignment="center"-->
<!--        android:textSize="20sp"-->
<!--        android:singleLine="true"-->
<!--        android:ellipsize="marquee"-->
<!--        android:marqueeRepeatLimit="marquee_forever"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/player_section"-->
<!--        tools:layout_editor_absoluteX="8dp" />-->

    <ProgressBar
        android:id="@+id/volume_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:max="15"
        android:progress="0"
        android:padding="15dp"
        android:progressTint="@color/pink"
        app:layout_constraintBottom_toTopOf="@+id/player_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/player_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/seek_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_vol_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@drawable/button_color"
                    android:src="@drawable/ic_baseline_volume_up_24"
                    android:tint="@drawable/button_color_negative" />

                <ImageButton
                    android:id="@+id/button_vol_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@drawable/button_color"
                    android:src="@drawable/ic_baseline_volume_down_24"
                    android:tint="@drawable/button_color_negative" />

                <ImageButton
                    android:id="@+id/button_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@drawable/button_color"
                    android:src="@drawable/ic_baseline_repeat_24"
                    android:tint="@drawable/button_color_negative" />

            </LinearLayout>
<!--            <ImageView-->
<!--                android:id="@+id/image_view"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="2" />-->

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/image_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:src="@drawable/tape80" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@drawable/button_color"
                    android:src="@drawable/ic_baseline_play_arrow_24"
                    android:tint="@drawable/button_color_negative" />

                <ImageButton
                    android:id="@+id/button_pause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@drawable/button_color"
                    android:src="@drawable/ic_baseline_pause_24"
                    android:tint="@drawable/button_color_negative" />

                <ImageButton
                    android:id="@+id/button_stop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@drawable/button_color"
                    android:src="@drawable/ic_baseline_stop_24"
                    android:tint="@drawable/button_color_negative" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/remaining_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:text="01:22" />

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@drawable/button_color"
                android:src="@drawable/ic_baseline_skip_previous_24"
                android:tint="@drawable/button_color_negative" />

            <ImageButton
                android:id="@+id/button_forw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@drawable/button_color"
                android:src="@drawable/ic_baseline_skip_next_24"
                android:tint="@drawable/button_color_negative" />

            <TextView
                android:id="@+id/elapsed_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-04:21" />

        </LinearLayout>
    </LinearLayout>


    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:progressTint="@color/pink"
        android:thumbTint="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>